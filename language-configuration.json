{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        //["{", "}"],
        //["[", "]"],
        //["(", ")"],
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string"]},
        {"open": "/*", "close": "*/", "notIn": ["string", "comment"]}
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        //["{", "}"],
        //["[", "]"],
        //["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}
